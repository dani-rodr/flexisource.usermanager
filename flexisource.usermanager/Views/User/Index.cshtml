@model User

<table class="table table-striped table-bordered table-hover table-responsive"
       data-toggle="table"
       data-url="/user/data"
       data-show-refresh="true"
       data-pagination="true"
       data-show-toggle="true"
       data-buttons="buttons"
       data-row-attributes="rowAttributes"
       data-search="true"
       id="userTable">

    <thead>
        <tr>
            <th data-field="userId" data-sortable="true">ID</th>
            <th data-field="name" data-sortable="true">Name</th>
            <th data-field="address" data-sortable="true">Address</th>
        </tr>
    </thead>
</table>
<div id="addModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">New Contact Information</h4>
            </div>
            <form method="post" asp-action="Add">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Name">
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Current Address">
                    </div>
                </div>
                <div class="modal-footer">
                    <input value="Submit" type="submit" class="btn btn-primary mt-3" />
                    <button type="button" class="btn btn-primary mt-3" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>

    </div>
</div>
<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Contact Information</h4>
                <button class="btn btn-delete"></button>
            </div>
            <form method="post" asp-action="Add">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="UserId"></label>
                        <input asp-for="UserId" class="form-control" id="textId" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Name" id="textName">
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Current Address" id="textAddress">
                    </div>
                </div>
                <div class="modal-footer">
                    <input value="Save" type="submit" class="btn btn-primary mt-3" />
                    <button type="button" class="btn btn-primary mt-3" data-dismiss="modal">Delete</button>
                    <button type="button" class="btn btn-primary mt-3" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>

    </div>
</div>

<script>
    function buttons()
    {
        return {
            btnAdd: {
                icon: 'fa-plus',
                event: function () {
                    $('#addModal').modal();
                }
            }
        }
    }

    $(function () {
        $('#userTable tbody').on('click', 'tr', function (e) {
            var tds = $(this).find('td');
            var id = tds.eq(0).text();
            var name = tds.eq(1).text();
            var address = tds.eq(2).text();
            $("#textId").val(id);
            $("#textName").val(name);
            $("#textAddress").val(address);
            $("#editModal").modal();
        })
    })
</script>