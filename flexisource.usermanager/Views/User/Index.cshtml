@model User

<table class="table table-striped table-bordered table-hover table-responsive"
       data-toggle="table"
       data-url="/user/data"
       data-show-refresh="true"
       data-pagination="true"
       data-show-toggle="true"
       data-buttons="buttons"
       id="userTable">

    <thead>
        <tr>
            <th data-field="userId" data-sortable="true">ID</th>
            <th data-field="name" data-sortable="true">Name</th>
            <th data-field="address" data-sortable="true">Address</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
<div id="addModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">New Contact Information</h4>
            </div>
            <form method="post" asp-action="Add">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Name">
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Current Address">
                    </div>
                </div>
                <div class="modal-footer">
                    <input value="Submit" type="submit" class="btn btn-primary mt-3" />
                    <button type="button" class="btn btn-primary mt-3" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>

    </div>
</div>

<script>function buttons() {
        return {
            btnAdd: {
                text: 'Add new row',
                icon: 'fa-plus',
                event: function () {
                    $('#addModal').modal();
                }
            }
        }
    }</script>